#[serde(rename_all = "camelCase")]
pub struct Params {
    {% for name, property in entity.properties | items -%}
    {%- if property.readOnly-%}{% continue -%}{%- endif -%}
    {%- if macros.relation_is_many_to_many(property)=='true' -%}
    pub {{ name | snake_case }}:Vec<i32>,
