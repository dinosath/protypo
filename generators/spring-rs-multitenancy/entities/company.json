{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Company",
  "type": "object",
  "order": 0,
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 100,
      "x-unique": true
    },
    "description": {
      "type": "string"
    },
    "logo": {
      "oneOf": [
        {
          "type": "string",
          "contentEncoding": "base64",
          "contentMediaType": "image/jpeg"
        },
        {
          "type": "string",
          "contentEncoding": "base64",
          "contentMediaType": "image/png"
        },
        {
          "type": "string",
          "contentEncoding": "base64",
          "contentMediaType": "image/webp"
        }
      ]
    }
  },
  "required": [
    "name"
  ]
}