{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "customer",
  "type": "object",
  "order": 3,
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 150,
      "x-unique": true
    },
    "list": {
      "type": "object",
      "$ref": "list.json",
      "x-relationship": "many-to-one"
    },
    "color": {
      "type": "string",
      "enum": ["red", "amber", "green"]
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "item.json"
      },
      "x-relationship": "many-to-many"
    }
  },
  "required": [
    "title",
    "checked"
  ]
}