{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Role",
  "type": "object",
  "order": 1,
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "members": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "member.json"
      },
      "x-relationship": "many-to-many"
    },
    "workspaces": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "workspace.json"
      },
      "x-relationship": "many-to-many"
    },
    "invitations": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "invitation.json"
      },
      "x-relationship": "many-to-many"
    }
  },
  "required": [
    "name",
    "description"
  ]
}